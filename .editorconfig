root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 250
tab_width = 4
trim_trailing_whitespace = true

[{*.yml, *.feature}]
indent_size = 2

[{src/main/resources/input/*.txt, src/test/resources/input/*.txt}]
insert_final_newline = false
